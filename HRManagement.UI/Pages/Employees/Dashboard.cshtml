@page
@model HRManagement.UI.Pages.Employees.DashboardModel
@{
    ViewData["Title"] = "Employee Dashboard";
    Layout = "_EmployeeLayout";
}


<div class="container my-4">
    <h2 class="mb-4">My Attendance</h2>

    @if (Model.AttendanceList.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered align-middle">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Date</th>
                        <th scope="col">Check In</th>
                        <th scope="col">Check Out</th>
                        <th scope="col">Work Hours</th>
                        <th scope="col">Overtime</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.AttendanceList)
                    {
                        <tr>
                            <td>@item.AttendanceDate.ToString("dd/MM/yyyy")</td>
                            <td>@(item.CheckInTime?.ToString("HH:mm") ?? "-")</td>
                            <td>@(item.CheckOutTime?.ToString("HH:mm") ?? "-")</td>
                            <td>@item.WorkHours</td>
                            <td>@item.OvertimeHours</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            You have no attendance records.
        </div>
    }
    <h2>My Leave Requests This Month</h2>
    <table class="table">
        <thead>
            <tr>
                <th>From</th>
                <th>To</th>
                <th>Type</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var leave in Model.LeaveList)
            {
                <tr>
                    <td>@leave.StartDate.ToShortDateString()</td>
                    <td>@leave.EndDate.ToShortDateString()</td>
                    <td>@leave.LeaveType</td>
                    <td>@leave.Status</td>
                </tr>
            }
        </tbody>
    </table>
</div>
