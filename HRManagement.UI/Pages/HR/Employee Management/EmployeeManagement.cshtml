@page "/HR/EmployeeManagement"
@model HRManagement.UI.Pages.HR.Employee_Management.EmployeeManagementModel
@{
    ViewData["Title"] = "HR Dashboard";
    Layout = "_HRLayout";
}

<div class="container-fluid px-3">
    <h2>Employee Management</h2>
    <form method="get" class="row g-3 mb-4">
        <div class="col-md-3">
            <label class="form-label">Department</label>
            <select name="DepartmentId" class="form-select">
                <option value="">All</option>
                @foreach (var d in Model.Departments)
                {
                    <option value="@d.DepartmentID" selected="@(Model.DepartmentId == d.DepartmentID)">@d.DepartmentName</option>
                }
            </select>
        </div>
        <div class="col-md-3">
            <label class="form-label">Position</label>
            <select name="PositionId" class="form-select">
                <option value="">All</option>
                @foreach (var p in Model.Positions)
                {
                    <option value="@p.PositionID" selected="@(Model.PositionId == p.PositionID)">@p.PositionName</option>
                }
            </select>
        </div>
        <div class="col-md-3">
            <label class="form-label">Level</label>
            <select name="LevelId" class="form-select">
                <option value="">All</option>
                @foreach (var l in Model.Levels)
                {
                    <option value="@l.EmployeeLevelID" selected="@(Model.LevelId == l.EmployeeLevelID)">@l.EmployeeLevelName</option>
                }
            </select>
        </div>
        <div class="col-md-3">
            <label class="form-label">Search</label>
            <input type="text" name="Search" class="form-control" value="@Model.Search" placeholder="Name or Email" />
        </div>
        <div class="col-md-12 text-end">
            <button type="submit" class="btn btn-primary me-2">
                <i class="bi bi-funnel-fill"></i> Filter
            </button>
            <a href="/HR/EmployeeManagement" class="btn btn-secondary">
                <i class="bi bi-x-circle"></i> Clear
            </a>
            <a href="/HR/EmployeeManagement/CreateEmployee" class="btn btn-success ms-2">
                <i class="bi bi-plus-circle"></i> Create Employee
            </a>
        </div>
    </form>
    <div class="table-responsive">
        <table class="table table-bordered table-hover" id="basic-datatables">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Date of Birth</th>
                    <th>Status</th>
                    <th>Department</th>
                    <th>Position</th>
                    <th>Level</th>
                    <th>Contract Type</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var emp in Model.Employees)
                {
                    <tr>
                        <td>@emp.Id</td>
                        <td>@emp.FirstName @emp.LastName</td>
                        <td>@emp.email</td>
                        <td>@(emp.DateOfBirth?.ToString("yyyy-MM-dd") ?? "")</td>
                        <td>@emp.Status</td>
                        <td>@Model.Departments.FirstOrDefault(d => d.DepartmentID == emp.DepartmentID)?.DepartmentName</td>
                        <td>@Model.Positions.FirstOrDefault(p => p.PositionID == emp.PositionID)?.PositionName</td>
                        <td>@Model.Levels.FirstOrDefault(l => l.EmployeeLevelID == emp.EmployeeLevelID)?.EmployeeLevelName</td>
                        <td>@Model.ContractTypes.FirstOrDefault(c => c.ContractTypeID == emp.ContractTypeID)?.ContractTypeName</td>
                        <td>
                            <a href="/HR/EmployeeManagement/EmployeeDetail?id=@emp.Id" class="btn btn-sm btn-info">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
