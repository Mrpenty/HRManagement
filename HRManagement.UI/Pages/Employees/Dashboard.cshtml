@page
@model HRManagement.UI.Pages.Employees.DashboardModel
@{
    ViewData["Title"] = "Employee Dashboard";
    Layout = "_EmployeeLayout";
}

<div class="container my-5">
    <h2 class="mb-4 fw-bold">📊 My Work Dashboard</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="row g-4">
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm border-0 bg-primary text-white">
                <div class="card-body text-center">
                    <i class="bi bi-clock-history display-5"></i>
                    <h5 class="card-title mt-2">Work Hours (Month)</h5>
                    <p class="h2 fw-bold mb-0">@((Model.Dashboard != null) ? Model.Dashboard.TotalWorkHours.ToString("0.##") : "0")</p>
                    <small>Hours</small>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm border-0 bg-success text-white">
                <div class="card-body text-center">
                    <i class="bi bi-calendar-check display-5"></i>
                    <h5 class="card-title mt-2">Work Days (Month)</h5>
                    <p class="h2 fw-bold mb-0">@((Model.Dashboard != null) ? Model.Dashboard.WorkDays : 0)</p>
                    <small>Days</small>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm border-0 bg-warning text-dark">
                <div class="card-body text-center">
                    <i class="bi bi-lightning-charge display-5"></i>
                    <h5 class="card-title mt-2">OT Hours (Month)</h5>
                    <p class="h2 fw-bold mb-0">@((Model.Dashboard != null) ? Model.Dashboard.OTHours.ToString("0.##") : "0")</p>
                    <small>Hours</small>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm border-0 bg-danger text-white">
                <div class="card-body text-center">
                    <i class="bi bi-umbrella-fill display-5"></i>
                    <h5 class="card-title mt-2">Leave Days (Year)</h5>
                    <p class="h2 fw-bold mb-0">@((Model.Dashboard != null) ? Model.Dashboard.DaysLeave : 0)</p>
                    <small>Days</small>
                </div>
            </div>
        </div>
    </div>
</div>
