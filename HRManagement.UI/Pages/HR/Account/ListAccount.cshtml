@page
@model HRManagement.UI.Pages.HR.Account.ListAccountModel

@{
    ViewData["Title"] = "Account Management";
}

<h2>Account Management</h2>

@if (Model.Accounts.Any())
{
    <table class="table table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>Full Name</th>
                <th>Email</th>
                @* <th>Phone</th> *@
                <th>Status</th>
                <th>Verified</th>
                @* <th>Hire Date</th> *@
                <th>Department</th>
                <th>Position</th>
                <th>Contract Type</th>
                <th>Employee Level</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var acc in Model.Accounts)
            {
                <tr>
                    <td>@($"{acc.FirstName} {acc.LastName}")</td>
                    <td>@acc.Email</td>
                    @* <td>@acc.PhoneNumber</td> *@
                    <td>
                        <span class="badge badge-@GetStatusBadge(acc.Status)">
                            @acc.Status
                        </span>
                    </td>
                    <td>
                        @if (acc.IsVerified)
                        {
                            <span class="badge badge-success">Yes</span>
                        }
                        else
                        {
                            <span class="badge badge-danger">No</span>
                        }
                    </td>
                    @* <td>@acc.HireDate?.ToString("yyyy-MM-dd")</td> *@
                    <td>@acc.DepartmentName</td>
                    <td>@acc.PositionName</td>
                    <td>@acc.ContractTypeName</td>
                    <td>@acc.EmployeeLevelName</td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-page="/HR/Account/UpdateAccount" asp-route-id="@acc.Id">Edit</a>
                        <a class="btn btn-sm btn-info ml-1" asp-page="/HR/Account/DetailAccount" asp-route-id="@acc.Id">Detail</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Không có tài khoản nào được tìm thấy.</p>
}

@functions {
    private string GetStatusBadge(string status) => status switch
    {
        "Active" => "success",
        "Inactive" => "secondary",
        _ => "dark"
    };
}
