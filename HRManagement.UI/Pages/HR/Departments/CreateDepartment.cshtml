@page
@model HRManagement.UI.Pages.HR.Departments.CreateDepartmentModel
@{
    ViewData["Title"] = "Create Department";
}

<h2>Create New Department</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Department.DepartmentName"></label>
        <input asp-for="Department.DepartmentName" class="form-control" />
        <label asp-for="Department.Description"></label>
        <input asp-for="Department.Description" class="form-control" />
        <span asp-validation-for="Department.DepartmentName" class="text-danger"></span>
    </div>

    <!-- Không cần input cho Status -->

    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
