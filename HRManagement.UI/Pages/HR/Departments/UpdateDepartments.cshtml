@page "{id:int}"
@model HRManagement.UI.Pages.HR.Departments.UpdateDepartmentsModel

@{
    ViewData["Title"] = "Update Department";
}

<h2>Update Department</h2>
<form method="post">
    <input type="hidden" asp-for="Department.DepartmentID" />

    <div class="form-group">
        <label asp-for="Department.DepartmentName"></label>
        <input asp-for="Department.DepartmentName" class="form-control" />
        <label asp-for="Department.Description"></label>
        <input type="hidden" asp-for="Department.UpdatedAt" class="form-control" />
        <input asp-for="Department.Description" class="form-control" />
        <span asp-validation-for="Department.DepartmentName" class="text-danger"></span>
        <label asp-for="Department.Status">Status</label>
        <select asp-for="Department.Status" class="form-control">
            <option value="Active">Active</option>
            <option value="Inactive">Inactive</option>
        </select>
        <span asp-validation-for="Department.Status" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
